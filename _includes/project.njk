{% for project in projects %}
    <!-- projects  -->
    <div class="home-section-divider"></div>
    <div class="index-project">
        <div class="index-project-left">
            <h2>{{ project.header }}</h2>
            {% image project.image, project.imageAlt, "project-image", "lazy", "20vw"%}
        </div>
        <div class="index-project-right">
            <p>Try {{ project.header }} <a href="{{ project.url }}">here</a></p>
            {% include project.templateContent %}
        </div>
    </div>
{% endfor %}